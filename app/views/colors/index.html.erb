<h1>Listing Colors</h1>
 <%= link_to "New Color", new_color_path, class: 'btn btn-primary pull-right' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Swatch</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% if @colors.present? %>
      <% @colors.each do |color| %>
        <tr>
          <td><%= color.name %></td>
          <td><%= color.code %></td>
          <td>
            <ul class='list-group'>
              <li class='list-group-item' style='background-color: <%= color.code %>;'>
              </li>
            </ul>  
          </td>
          <td><%= link_to "Show", color %></td>
          <td><%= link_to "Edit", edit_color_path(color) %></td>
          <td><%= link_to "Destroy", color, method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <th colspan="3">Currently there's no record to display.</th>
      </tr>
    <% end %>
  </tbody>
</table>
 <%= will_paginate @colors, renderer: BootstrapPagination::Rails if @colors.present? %>
 
