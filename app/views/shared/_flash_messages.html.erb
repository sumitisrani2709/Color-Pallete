<% if flash.present? %>
  <script>
    <% if flash[:success] %>
      toastr.success("<%= flash[:success] %>")
    <% end %>
    <% if flash[:error] %>
      toastr.error("<%= flash[:error] %>")
    <% end %>
    <% if flash[:notice] %>
      toastr.info("<%= flash[:notice] %>")
    <% end %>
  </script>
  <% flash.clear %>
<% end %>