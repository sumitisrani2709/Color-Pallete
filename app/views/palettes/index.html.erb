<h1>Listing Palettes</h1>
 <%= link_to "New Palette", new_palette_path, class: 'btn btn-primary pull-right' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color Swatch</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% if @palettes.present? %>
      <% @palettes.each do |palette| %>
        <tr>
          <td><%= palette.name %></td>
          <td><%= palette.decorate.show_palette_swatch.html_safe %></td>
          <td><%= link_to "Show", palette %></td>
          <td><%= link_to "Edit", edit_palette_path(palette) %></td>
          <td><%= link_to "Destroy", palette, method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <th colspan="3">Currently there's no record to display.</th>
      </tr>
    <% end %>  
  </tbody>
</table>
<%= will_paginate @palettes, renderer: BootstrapPagination::Rails if @palettes.present? %>
